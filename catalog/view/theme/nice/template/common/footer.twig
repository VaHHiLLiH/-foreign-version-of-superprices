<footer>
  <div class="container footer-container">
    <div class="row">
      {% if informations %}
      <div class="footer-left-column col-sm-5">
        <div id="footer-logo">
          {% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></a>
          {% else %}
            <h1><a href="{{ home }}">{{ name }}</a></h1>
          {% endif %}
          <p class="footer-special-text">All trademarks used are properties
            of their respective owners.</p>
        </div>
        {{ search }}
      </div>
      {% endif %}
      <div class="footer-right-column col-sm-5">

        <h5>{{ text_information }}</h5>
        <ul class="list-unstyled">
          {% for information in informations %}
            <li><a href="{{ information.href }}">{{ information.title }}</a></li>
          {% endfor %}

          <li><a href="{{ manufacturer }}">{{ text_manufacturer }}</a></li>
        </ul>
      </div>
    </div>
  </div>
</footer>
<!-- Report Modal -->
<div id="report-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <div class="modal-title"></div>
      </div>
      <div class="modal-body"></div>
      <div class="modal-footer"></div>
    </div>
  </div>    
</div>
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
</body></html>