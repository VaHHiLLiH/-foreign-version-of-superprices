{% if products %}
    <div class="section section--productlist">
        <div class="section--title-wrapper"><p class="section--title">{{ text_similar_attributes }}</p></div>
        <div class="row productlist-row">
            {% for product in products %}
                <div class="product-layout product-grid col-sm-3">
                    <div class="product-thumb transition">
                        <div class="product-thumb--image">
                            <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a>
                        </div>
                        <div class="product-thumb--info">
                            <div class="product-thumb--rating">
                                {% if product.rating %}
                                    {% for i in 1..5 %}
                                        {% if product.rating < i %}<span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>{% endif %}
                                    {% endfor %}
                                {% endif %}
                            </div>
                            <a class="product-thumb--name-bold href="{{ product.href }}">{{ product.name }}</a>
                            <p class="product-thumb--description">{{ product.description }}</p>
                            <div class="product-thumb--hidden-wrapper">
                                <button type="button" class="btn btn-accent product-thumb--button-buy -grid-hover-effect-hidden" onclick="compare.add('{{ product.product_id }}');"><span class="">{{ button_compare }}</span></button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}